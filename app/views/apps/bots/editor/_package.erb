
<% #= local_assigns %>

  <div>
    <div class="cursor-move btn btn-dark-flat">
      <%= heroicon "arrows-up-down" %>
    </div>
  </div>
  <div class="flex-grow shadow border border-gray-400 rounded p-6 relative dark:bg-gray-800 bg-gray-100 max-w-sm">
    
    <%= bot_id%>
    <%= bot_step_id %>
    <% o = form.object.as_json.with_indifferent_access %>
    <%= render DefinitionRenderer::Component.new(
        schema: o["schema"],
        size: "sm",
        blocks: o,
        app_package: form.object.app_package,
        location: "bots",
        category: category,
        values: {},
        conversation_key: nil,
        path: app_package_path(@app.key, form.object.app_package),
        app: @app,
        ctx: {}
    ) do %>
    <% end %>
  </div>

  <div>
    <button class="btn btn-icon"
      data-action="click->nested-form#remove_association"
      type="button">
      <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="15" height="15"><path d="M4.5 4.5l6 6m-6 0l6-6m-3 10a7 7 0 110-14 7 7 0 010 14z" stroke="currentColor"></path></svg>
    </button>
  </div>

