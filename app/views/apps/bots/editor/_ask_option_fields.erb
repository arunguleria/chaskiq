<div class="p-2 border nested-fields" data-new-record="true">
  <%= form.hidden_field :id %>
  <%= form.hidden_field :element %>

  <div class="flex space-x-2">
    <%= form.text_field :label %>
    <%= form.select :next_step_uuid, @bot.paths.map{|o| 
      [o["title"], o["id"] ] 
    }, {} %>

    <button class="btn btn-icon"
      data-action="click->nested-form#remove_association"
      type="button">
      <%= heroicon("x-circle") %>
    </button>

  </div>
</div>