<%= render Content::Component.new do %>

	<%= turbo_frame_tag 'app-settings', data: {controller: 'history-frame'} do %>

		<%= render PageHeader::Component.new(title: I18n.t('settings.webhooks.outgoing_webhooks') ) do %>
			<%= link_to( I18n.t('settings.webhooks.new_webhook'), 
				new_app_webhook_path(@app.key), 
				data: {
				'turbo-frame': 'modal', 
				'turbo-action': 'replace', 
				'action': 'click->modal#open'
				}, 
				class: "btn btn-flat-dark md") 
			%>
		<% end %>

		<%= render Tabs::Component.new(	items: webhooks_menu_data ) do %>
			<%= render Hints::Component.new(type: 'webhooks') %>

			<% if @webhooks.empty? %>
				<%= render EmptyView::Component.new(
					title: I18n.t('settings.webhooks.empty.title'),
					subtitle: I18n.t('settings.webhooks.empty.desc'),
					text: I18n.t('settings.webhooks.empty.disabled_webhooks')
				) %>
			<% else %>
				<%= render 'table' %>
			<% end %>
		<% end %>
	<% end %>
<% end %>