<%= turbo_frame_tag "modal" do %>
	<%= form_for @custom_field, 
		url: app_tags_path(@app.key, @custom_field), 
		data: {'turbo-frame': '_top' } do |f|%>

		<%= f.text_field :name %>
		<%= f.select :type, options_for_select() %>

		<% options = @custom_field.translations.map(&:locale)  %>
		
		<%= f.select :type, options_for_select(options.map{|o| [o,o]}, nil), {}, {
			data: {
				'select-target': 'select', 
				options: labeled_options.to_json 
			},
			label: I18n.t('definitions.settings.languages.select_lang')
		} 
		%>


		<%= f.submit(t("common.submit"), class: "btn btn-success")%>
	<% end %>
<% end %>