<%= turbo_frame_tag "modal" do %>
	<%= form_for @tag, 
		url: app_tag_path(@app.key, @tag.name), 
		method: :patch,
		data: {'turbo-frame': '_top' } do |f|%>

		<%= f.text_field :name %>

		<% options = I18n.t('settings.user_data.attr_types') %>
		
		<%= f.select :type, options_for_select(options.map{|k,v| [k,v]}, nil), {}, {
			data: {
				'select-target': 'select', 
				options: options.map{|k,v| {label: k, value: v }  }.to_json 
			},
			label: I18n.t('definitions.settings.languages.select_lang')
		} 
		%>


		"[erb]": {
        "editor.defaultFormatter": "aliariff.vscode-erb-beautify"
    },


		<%= f.submit(t("common.submit"), class: "btn btn-success")%>
	<% end %>
<% end %>