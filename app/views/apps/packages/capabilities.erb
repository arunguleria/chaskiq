<%= render "shared/modal" do %>
	<div class="h-64 overflow-auto">
		<div>
				<div class="
					bg-white 
					shadow 
					overflow-hidden sm:rounded-md">
					<ul>
						<% @packages.each do |pkg| %>
							<li class="">
								<div class="undefined block
										hover:bg-gray-100
										dark:bg-black
										dark:hover:bg-gray-900
										dark:focus:bg-gray-800
										focus:outline-none focus:bg-gray-200 transition duration-150
										ease-in-out">
										<div class="flex items-center px-4 py-4 sm:px-6">
											<div class="min-w-0 flex-1 flex items-center">
													<div class="min-w-0 flex-1 px-4 md:grid md:grid-cols-2 md:gap-4">
														<div>
																<div class="text-lg leading-5 font-medium text-gray-600 dark:text-gray-200 truncate">
																	<%= pkg.app_package.name %>
																</div>
																<div class="mt-2 flex items-center text-sm leading-5 text-gray-500 dark:text-gray-300">
																	<span class="truncate">
																	<%= pkg.app_package.description %>
																	</span>
																</div>
														</div>
														<div class="hidden md:block">
																<div>
																	<div class="mt-2 flex items-center text-sm leading-5 text-gray-500 justify-end">
																		<form action="<%= configure_app_package_path(@app.key, pkg.app_package.name) %>" method="post">
																			
																			<input type="hidden" name="location" value="<%= @location %>">
																			<input type="hidden" name="kind" value="<%= @location %>">
																			<input type="hidden" name="category" value="<%= @category %>">
																			<input type="hidden" name="conversation_key" value="<%= @conversation_key %>">

																			<button type="submit" class="transition duration-150 ease-in-out  css-zwcswv" 
																				data-cy="add-package-<%= pkg.app_package.name %>">
																				Add
																			</button>
																		</form>
																	</div>
																</div>
														</div>
													</div>
											</div>
										</div>
								</div>
							</li>
						<% end %>
					</ul>
				</div>
		</div>
	</div>
<% end %>